<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/meal"
    tools:context=".MainActivity"
    tools:ignore="MissingPrefix">

    <EditText
        android:id="@+id/edtTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:inputType="text"
        android:minHeight="48dp"
        android:text="Enter Time Of Day"
        android:textColor="#7B49CE"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/txtViewMeals"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.295" />

    <TextView
        android:id="@+id/txtViewMeals"
        android:layout_width="288dp"
        android:layout_height="252dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="36dp"
        android:text="TextView"
        android:textColor="#03A9F4"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/btnPrep"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnPrep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="144dp"
        android:backgroundTint="#2196F3"
        android:text="Prepare"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="144dp"
        android:backgroundTint="#673AB7"
        android:text="Reset"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>